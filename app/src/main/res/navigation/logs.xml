<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/logs"
    app:startDestination="@id/logsFragment">

    <fragment
        android:id="@+id/logsFragment"
        android:name="com.f0x1d.logfox.ui.fragment.LogsFragment"
        android:label="LogsFragment" >
        <action
            android:id="@+id/action_logsFragment_to_logsExtendedCopyFragment"
            app:destination="@id/logsExtendedCopyFragment" />
        <action
            android:id="@+id/action_logsFragment_to_searchBottomSheet"
            app:destination="@id/searchBottomSheet" />
        <action
            android:id="@+id/action_logsFragment_to_filtersFragment"
            app:destination="@id/filtersFragment" />
    </fragment>
    <fragment
        android:id="@+id/logsExtendedCopyFragment"
        android:name="com.f0x1d.logfox.ui.fragment.ExtendedCopyFragment"
        android:label="ExtendedCopyFragment" >
        <argument
            android:name="content"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/searchBottomSheet"
        android:name="com.f0x1d.logfox.ui.dialog.SearchBottomSheet"
        android:label="SearchBottomSheet" >
        <argument
            android:name="query"
            app:argType="string"
            app:nullable="true" />
    </dialog>
    <dialog
        android:id="@+id/filterBottomSheet"
        android:name="com.f0x1d.logfox.ui.dialog.FilterBottomSheet"
        android:label="FilterBottomSheet" >
        <argument
            android:name="filterId"
            app:argType="long"
            android:defaultValue="-1L" />
    </dialog>
    <fragment
        android:id="@+id/filtersFragment"
        android:name="com.f0x1d.logfox.ui.fragment.FiltersFragment"
        android:label="FiltersFragment" >
        <action
            android:id="@+id/action_filtersFragment_to_filterBottomSheet"
            app:destination="@id/filterBottomSheet" />
    </fragment>
</navigation>