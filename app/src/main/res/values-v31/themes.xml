<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LogFox" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/system_accent1_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/system_accent1_100</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/system_accent1_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/system_accent1_100</item>
        <item name="colorOnSecondaryContainer">@color/system_accent1_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Customize your theme here. -->
        <item name="enableEdgeToEdge">true</item>
        <item name="switchStyle">@style/LogFox.Switches</item>
        <item name="noteStrokeColor">@color/noteStrokeColor</item>

        <!-- ActionBar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>